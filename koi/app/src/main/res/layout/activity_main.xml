<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/busModeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mainbutton2"
            android:clickable="true"
            android:onClick="busModeBtnClicked">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/busModeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="101dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="대중교통 모드"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/busIcon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_above="@+id/busModeText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/bus" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detectBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mainbutton1"
            android:clickable="true"
            android:onClick="busModeBtnClicked">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:onClick="detectBtnClicked">

                <TextView
                    android:id="@+id/detectText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="101dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="감지모드 꺼짐"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/detectIcon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_above="@+id/detectText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/warnoffpng" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/customBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mainbutton4"
            android:clickable="true"
            android:onClick="customBtnClicke">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_toEndOf="@+id/busIcon"
                android:gravity="center">

                <TextView
                    android:id="@+id/customText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="101dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="사용자 지정"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/customIcon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_above="@+id/customText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/custom" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/functionBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mainbutton3"
            android:clickable="true"
            android:onClick="functionBtnClicked">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"

                android:gravity="center">

                <TextView
                    android:id="@+id/functionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="101dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="유용한 기능"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:id="@+id/functionIcon"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_above="@+id/functionText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/function" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>